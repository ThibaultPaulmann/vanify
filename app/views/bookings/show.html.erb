<div class="bookings-show">
  <h1><%= @booking.caravan.model %></h1>
  <div class="d-flex justify-content-between">
    <div>
      <p><%= @booking.caravan.location %></p>
    </div>
    <div>
      <p><%= @booking.caravan.user.username %></p>
    </div>
    <div>
    <p><%= @booking.user.username  %></p>
    </div>
  </div>

  <div class="show-images-container-bookings">
    <% if @booking.caravan.photos.attached? %>
      <% @booking.caravan.photos.each do |photo| %>
      <div class="photo-img-booking" style="background-image: url('<%= cl_image_path photo.key, crop: :fill%>')"></div>
    <% end %>
  <% end %>
</div>

  <div class="show-info-container-bookings">
    <div class="info-header-bookings d-flex justify-content-between">
      <div>
        <p><i class="fa-solid fa-users-between-lines"></i> <%= @booking.caravan.capacity %></p>
      </div>
      <div>
        <% if @booking.caravan.user.profilePic.nil? %>
          <div style="height: 60px; width: 60px; background-color: darkgrey; border-radius: 50%;"></div>
        <% else %>
          <img src=<%= @booking.caravan.user.profilePic %> alt="" class="avatar">
        <% end %>
      </div>
    </div>
    <div class="info-body-bookings">
      <div>
        <p>Year: <%= @booking.caravan.year.nil? ? "N/A" : @booking.caravan.year %> </p>
        <p>Fuel type: <%= @booking.caravan.fuelType.nil? ? "N/A" : @booking.caravan.fuelType %></p>
        <p> Description: <%= @booking.caravan.description %><%= @booking.caravan.description %><%= @booking.caravan.description %><%= @booking.caravan.description %><%= @booking.caravan.description %>
        </p>
      </div>
    </div>
  </div>
</div>
